{
  "manifest_version": 3,
  "name": "OfflineBot",
  "description": "This extension hosts an ollama ui web server on localhost",
  "version": "1.1",
  "action": {},
  "permissions": [
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "http://*:11434/api/tags",
    "http://*:11434/api/generate",
    "https://*:11434/api/tags",
    "https://*:11434/api/generate"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png"
  }
}